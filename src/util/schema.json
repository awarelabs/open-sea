{
	"type": "object",
	"properties": {
		"name": { "type": "string" },
		"description": { "type": "string" },
		"version": { "type": "string" },
		"topics": {
			"type": "object",
			"additionalProperties": {
				"type": "object",
				"properties": {
					"name": { "type": "string" }
				}
			}
		},
		"certifications": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"description": { "type": "string" },
					"colour": { "type": "string" },
					"level": { "type": "number" },
					"requirements": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"indirectIndicator": { "type": "string" }, 
								"operator": {
									"type": "string",
									"enum": [ ">", ">=", "<", "<=", "==" ]
								},
								"value": {
									"anyOf": [
										{ "type": "string" },
										{ "type": "number" }
									]
								}
							},
							"additionalProperties": false,
							"required": [ "indirectIndicator", "operator", "value" ]
						}
					}
				},
				"additionalProperties": false,
				"required": [ "name", "requirements" ]
			}
		},
		"indicators":{
			"type" : "object",
			"additionalProperties": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"description": { "type": "string" },
					"type": {
						"type": "string",
						"enum": [ "indicator", "survey" ]
					},
					"topic": { "type": "string" }
				},
				"required": [ "name", "type" ]
			}
		},
		"directIndicators" : {
			"type": "object",
			"additionalProperties": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"help": { "type": "string" },
					"type": {
						"type": "string",
						"enum": [ "text", "number", "list", "likert", "answer" ]
					}
				},
				"required": [ "name", "type"]
			}
		},
		"indirectIndicators": {
			"type": "object",
			"additionalProperties": {
				"type": "object",
				"properties": {
					"indicator": { "type": "string" },
					"value": { "type": "string" },
					"type": {
						"type": "string",
						"enum": [ "text", "number", "percentage", "list", "response" ]
					}
				},
				"required": [ "indicator", "type", "value" ]
			}
		},
		"surveys": {
			"type": "object",
			"additionalProperties": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"description": { "type": "string" },
					"questions": {
						"name": "string",
						"description": "string",
						"isMandatory": "string",
						"answerType": "string",
						"topic": "string"
					},
					"sample": {
						"sampletype": "string",
						"stakeholdergroup": "string"
					}
				},
				"required": [ "name", "questions"]
			}
		},
		"reportItems": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"chart": {
						"type": "object",
						"properties": {
							"colors": {
								"type": "array",
								"items": { "type": "string" }
							},
							"data": {
								"type": "array",
								"items": { "type": "string" }
							},
							"type": {
								"type": "string",
								"enum": [ "line", "bar", "scatter", "pie", "percentage" ]
							}
						},
						"additionalProperties": false,
						"required": [ "data", "type" ]
					},
					"value": { "type": "string" },
					"width": {
						"type": "number",
						"default": 100
					}
				},
				"required": [ "name", "width" ]
			}
		}
	},
	"required": [ "surveys" ]
}
